{
  "name": "scholzmx-astro",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "bun@1.2.19",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "typecheck": "astro check",
    "build-blog": "bash build-blog.sh",
    "lint": "bun run lint:js && bun run lint:css",
    "lint:js": "eslint . --ext .js,.astro,.ts,.tsx",
    "lint:js:fix": "eslint . --ext .js,.astro,.ts,.tsx --fix",
    "lint:css": "stylelint \"src/**/*.{css,astro}\"",
    "lint:css:fix": "stylelint \"src/**/*.{css,astro}\" --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "a11y": "pa11y http://localhost:4321",
    "a11y:full": "pa11y --sitemap http://localhost:4321/sitemap.xml",
    "test:a11y": "bun run build && bun run preview & sleep 3 && bun run a11y; kill $!"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.12",
    "@charmland/crush": "^0.2.1",
    "astro": "^5.12.8",
    "npm-check-updates": "^18.0.2",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@astrojs/sitemap": "^3.4.2",
    "@types/node": "^24.1.0",
    "@typescript-eslint/parser": "^8.39.0",
    "astro-purgecss": "^5.3.0",
    "eslint": "^9.32.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "lighthouse": "^12.8.0",
    "lightningcss": "^1.30.1",
    "pa11y": "^9.0.0",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "stylelint": "^16.23.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^39.0.0",
    "vite-plugin-lightningcss": "^0.0.5"
  }
}
