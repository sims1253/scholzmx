{
  "name": "scholzmx-astro",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "bun@1.2.20",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "typecheck": "astro check",
    "build-blog": "bash build-blog.sh",
    "lint:js": "eslint . --ext .js,.astro,.ts,.tsx",
    "lint:js:fix": "eslint . --ext .js,.astro,.ts,.tsx --fix",
    "lint:css": "stylelint \"src/**/*.{css,astro}\"",
    "lint:css:fix": "stylelint \"src/**/*.{css,astro}\" --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "quality:check": "bun run typecheck && bun run lint:js && bun run lint:css && bun run format:check",
    "quality:fix": "bun run lint:js:fix && bun run lint:css:fix && bun run format",
    "quality:full": "bun run quality:check && bun run build && bun run test:a11y",
    "lighthouse": "lighthouse http://localhost:4321 --output html --output-path ./lighthouse-report.html",
    "lighthouse:ci": "lhci autorun --url http://localhost:4321/ --url http://localhost:4321/blog/ --url http://localhost:4321/research/ --url http://localhost:4321/projects/ --url http://localhost:4321/notes/",
    "perf:local": "bun run build && bun run preview & sleep 3 && bun run lighthouse; kill $!",
    "perf:budget": "bun run build && bun run preview & sleep 3 && bun run lighthouse:ci; kill $!",
    "a11y": "pa11y http://localhost:4321",
    "a11y:full": "pa11y --sitemap http://localhost:4321/sitemap.xml",
    "test:a11y": "bun run build && bun run preview & sleep 3 && bun run a11y; kill $!"
  },
  "dependencies": {
    "@astrojs/check": "0.9.5",
    "@astrojs/rss": "4.0.14",
    "astro": "5.16.0",
    "npm-check-updates": "^18.3.1",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@astrojs/sitemap": "3.6.0",
    "@lhci/cli": "^0.15.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/parser": "^8.48.1",
    "astro-pagefind": "^1.8.5",
    "astro-purgecss": "^5.3.0",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "lighthouse": "^12.8.2",
    "lightningcss": "^1.30.2",
    "pa11y": "^9.0.1",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "stylelint": "^16.26.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^4.1.17",
    "vite-plugin-lightningcss": "^0.0.5"
  }
}
