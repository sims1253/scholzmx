---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PaperTexture from '../../components/PaperTexture.astro';
import DropCap from '../../components/DropCap.astro';

export async function getStaticPaths() {
  const recipes = await getCollection('recipes');
  return recipes.map((recipe) => ({
    params: { slug: recipe.slug },
    props: { recipe },
  }));
}

const { recipe } = Astro.props;
const { Content } = await recipe.render();
---

<BaseLayout 
  title={`${recipe.data.title} - Scholz MX`}
  description={recipe.data.description}
  footerVariant="kitchen"
>
  <PaperTexture pattern="parchment" intensity="medium" className="recipe-post">
    <article class="recipe-content">
      <header class="recipe-header">
        <div class="recipe-meta">
          <div class="recipe-info">
            <span class="recipe-servings" title="Servings">üë• {recipe.data.servings}</span>
            <span class="recipe-time" title="Total time">‚è±Ô∏è {recipe.data.time}</span>
            <span class="recipe-season" title="Season">üåø {recipe.data.season}</span>
          </div>
          {recipe.data.tags && (
            <div class="recipe-tags">
              {recipe.data.tags.map(tag => (
                <span class="tag">#{tag}</span>
              ))}
            </div>
          )}
        </div>
        
        <h1 class="recipe-title">
          <DropCap letter={recipe.data.title.charAt(0)} color="ochre" style="botanical" />
          {recipe.data.title.slice(1)}
        </h1>
        
        <p class="recipe-description">{recipe.data.description}</p>
      </header>
      
      <div class="recipe-body">
        <Content />
      </div>
      
      <footer class="recipe-footer">
        <nav class="recipe-navigation">
          <a href="/recipes" class="back-link">‚Üê Back to Kitchen</a>
        </nav>
      </footer>
    </article>
  </PaperTexture>
</BaseLayout>

<style>
  .recipe-post {
    max-width: 100%;
  }

  .recipe-content {
    max-width: 70ch;
    margin: 0 auto;
    padding: var(--space-xl) var(--space-lg);
  }

  .recipe-header {
    margin-bottom: var(--space-xl);
    text-align: center;
  }

  .recipe-meta {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .recipe-info {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
    flex-wrap: wrap;
  }

  .recipe-servings,
  .recipe-time,
  .recipe-season {
    font-size: var(--text-sm);
    color: var(--color-ink-medium);
    font-weight: 500;
  }

  .recipe-tags {
    display: flex;
    gap: var(--space-xs);
    flex-wrap: wrap;
    justify-content: center;
  }

  .tag {
    font-size: var(--text-xs);
    color: var(--color-moss);
    background-color: rgba(90, 107, 71, 0.1);
    padding: 0.2em 0.5em;
    border-radius: calc(var(--border-radius) / 2);
    font-weight: 500;
  }

  .recipe-title {
    font-size: clamp(var(--text-xl), 4vw, var(--text-2xl));
    line-height: 1.2;
    margin-bottom: var(--space-md);
    color: var(--color-ink-dark);
    text-align: left;
  }

  .recipe-description {
    font-size: var(--text-lg);
    font-style: italic;
    color: var(--color-ink-medium);
    line-height: 1.6;
    margin-bottom: var(--space-lg);
  }

  .recipe-body {
    font-size: var(--text-lg);
    line-height: 1.6;
    color: var(--color-ink-dark);
    font-feature-settings: 'liga' 1, 'kern' 1, 'calt' 1;
    text-rendering: optimizeLegibility;
  }

  .recipe-body :global(h2) {
    font-size: var(--text-xl);
    margin-top: 2em;
    margin-bottom: 0.8em;
    color: var(--color-walnut);
    font-weight: 600;
    line-height: 1.3;
  }

  .recipe-body :global(h3) {
    font-size: var(--text-lg);
    margin-top: 1.6em;
    margin-bottom: 0.6em;
    color: var(--color-ink-dark);
    font-weight: 600;
    line-height: 1.4;
  }

  .recipe-body :global(p) {
    margin-bottom: 1.5em;
  }

  .recipe-body :global(ul),
  .recipe-body :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .recipe-body :global(li) {
    margin-bottom: var(--space-xs);
    line-height: 1.6;
  }

  .recipe-body :global(strong) {
    color: var(--color-walnut);
    font-weight: 600;
  }

  .recipe-body :global(em) {
    color: var(--color-ink-medium);
  }

  .recipe-footer {
    margin-top: var(--space-xxl);
    padding-top: var(--space-lg);
    border-top: 1px solid rgba(139, 90, 60, 0.1);
  }

  .recipe-navigation {
    text-align: center;
  }

  .back-link {
    font-size: var(--text-sm);
    color: var(--color-walnut);
    text-decoration: none;
    font-weight: 500;
    padding: var(--space-xs) var(--space-sm);
    border: 1px solid var(--color-walnut);
    border-radius: var(--border-radius);
    transition: all var(--transition-fast);
  }

  .back-link:hover {
    background-color: var(--color-walnut);
    color: var(--color-parchment-light);
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .recipe-content {
      padding: var(--space-lg) var(--space-md);
    }

    .recipe-info {
      flex-direction: column;
      gap: var(--space-xs);
      align-items: center;
    }

    .recipe-title {
      text-align: center;
    }
  }
</style>