---
import BaseLayout from '../layouts/BaseLayout.astro';
import DropCap from '../components/DropCap.astro';
import ImageFrame from '../components/ImageFrame.astro';
import { getCollection } from 'astro:content';

/* Optimized local images */
import selfImage from '../assets/images/homepage/self.jpg';
import portraitImage from '../assets/images/homepage/portrait.jpg';

/* Get newest post (blog or recipe) */
const allBlogPosts = await getCollection('blog');
const allRecipes = await getCollection('recipes');

const latestBlog = allBlogPosts
  .filter((p) => !p.data.draft)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())[0];

// Recipes use 'created' instead of 'date'
const latestRecipe = allRecipes.sort(
  (a, b) => new Date(b.data.created).getTime() - new Date(a.data.created).getTime()
)[0];

// Compare dates and pick the newest
const blogDate = latestBlog?.data.date ? new Date(latestBlog.data.date) : null;
const recipeDate = latestRecipe?.data.created ? new Date(latestRecipe.data.created) : null;

const newestPost =
  blogDate && recipeDate
    ? blogDate > recipeDate
      ? { type: 'blog' as const, post: latestBlog, date: blogDate }
      : { type: 'recipe' as const, post: latestRecipe, date: recipeDate }
    : blogDate
      ? { type: 'blog' as const, post: latestBlog, date: blogDate }
      : recipeDate
        ? { type: 'recipe' as const, post: latestRecipe, date: recipeDate }
        : null;

const formatDate = (date: Date) => date.toISOString().split('T')[0];
---

<BaseLayout
  title="Grotto - Personal Website of Maximilian Scholz"
  description="Welcome to my Grotto, a place where I try to cultivate the feeling of watching the shadows dance through vines, while insects are humming and tansy is making everything smell like summer."
  footerVariant="default"
  includeQuoteSection={true}
  addBorders={true}
  tone="personal"
  layout="prose"
  prose={true}
>
  <div class="welcome-section">
    <div class="welcome-header">
      <div class="manuscript-text">
        <h1 class="site-title">Welcome to my Grotto</h1>
        <p class="site-description constrained-text prose">
          a place where I try to cultivate the feeling of watching the shadows dance through vines,
          while insects are humming and tansy is making everything smell like summer.
        </p>
      </div>
      <ImageFrame
        src={portraitImage}
        alt="Professional portrait of me"
        alternateSrc={selfImage}
        alternateAlt="More cool portrait of me"
        style="gentle-oval"
        size="large"
        loading="eager"
        positionX={0}
        positionY={2}
        scale={1.4}
        alternatePositionX={-5}
        alternatePositionY={15}
        alternateScale={1.5}
      />
    </div>

    <div class="about-preview">
      {
        newestPost && (
          <aside class="latest-scribble">
            <span class="scribble-label">Newest post</span>
            <a
              href={
                newestPost.type === 'blog'
                  ? `/blog/${newestPost.post.id}`
                  : `/recipes/${newestPost.post.id}`
              }
              class="scribble-title"
            >
              {newestPost.post.data.title}
            </a>
            <time class="scribble-date" datetime={newestPost.date.toISOString()}>
              {formatDate(newestPost.date)}
            </time>
          </aside>
        )
      }
      <div class="prose content">
        <p class="prose">
          <DropCap letter="I" variant="personal" />'m Maximilian. My best friend once painted me a
          t-shirt that read <em>verspielt und liebensw√ºrdig</em> (playful and endearing) and I've yet
          to find a better description. The best feedback I've ever gotten described me as a <em
            >herder of cat herders</em
          > and my music taste has been characterized as being <em
            >an atmospheric futurist with a nostalgic heart</em
          >.<br /><br />

          I tend to make things: software infrastructure that hopefully helps others, harsh vocals
          and guitar covers, a concept Call of Cthulhu campaign for a deathcore album (much to my
          players' confusion), and kitchen experiments where I try something new each month. I'm
          easy to nerdsnipe, if you couldn't tell. When I'm not building something, you'll find me
          on the mats failing triangle escapes, or somewhere between a barbell and a book.<br /><br
          />

          Somewhere along the way I collected a B.Sc. in <em>Computer Science in Engineering</em>, a
          M.Sc. in <em>Software Engineering and Technology</em>, and, if the gods of bureaucracy
          ever look kindly upon me, a PhD in <em>Bayesian statistics</em> will follow.
        </p>
        <p class="prose">
          I've hidden a growing number of easter eggs around the site. Let me know when you find
          them :)
        </p>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  /* Simplified welcome page - let BaseLayout grid control overall structure */

  .welcome-section {
    position: relative;
    width: 100%;
    max-width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .welcome-header {
    display: flex;
    align-items: flex-start;
    gap: var(--space-xl);
    margin: 0 auto var(--space-xs);
  }

  .manuscript-text {
    flex: 1;
    margin-bottom: var(--space-md);
  }

  .site-title {
    font-size: clamp(var(--text-xl), 3.5vw, var(--text-2xl));
    line-height: 1.4;
    margin-bottom: 0;
    color: var(--color-ink-dark);
    font-weight: 600;
  }

  .site-description {
    margin-top: var(--space-xs);
    margin-bottom: 0;
  }

  .constrained-text {
    max-width: 100%;
    overflow: hidden;
    box-sizing: border-box;
  }

  .about-preview {
    position: relative;
    margin-bottom: var(--space-xs);
    margin-top: var(--space-xs);
    margin-left: auto;
    margin-right: auto;
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .welcome-header {
      flex-direction: column;
      align-items: center;
      gap: var(--space-md);
    }

    .manuscript-text {
      text-align: center;
    }

    .portrait-frame {
      order: -1;
    }
  }

  @media (max-width: 640px) {
    .about-preview {
      flex-direction: column;
      text-align: center;
      gap: var(--space-sm);
    }

    .about-preview .prose p {
      text-align: left;
    }

    .portrait-frame {
      width: 100px;
      height: 100px;
      margin: 0 auto;
    }
  }

  @media (max-width: 480px) {
    .site-title {
      font-size: var(--text-lg);
    }
  }

  /* Latest Scribble - margin note style */
  .latest-scribble {
    position: absolute;
    right: -240px;
    top: 0;
    width: 200px;
    background: var(--color-surface);
    border-left: 3px solid color-mix(in srgb, var(--color-lichen) 60%, transparent);
    padding: var(--space-sm) var(--space-md);
    border-radius: 6px;
    box-shadow:
      0 1px 3px color-mix(in srgb, var(--color-walnut) 12%, transparent),
      0 0 0 1px color-mix(in srgb, var(--color-lichen) 22%, transparent);
    display: flex;
    flex-direction: column;
    gap: var(--space-xxs);
  }

  .scribble-label {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    font-weight: 600;
  }

  .scribble-title {
    font-size: var(--text-sm);
    color: var(--color-walnut);
    text-decoration: none;
    font-weight: 500;
    line-height: 1.3;
    transition: color var(--transition-fast);
  }

  .scribble-title:hover {
    color: var(--color-moss);
  }

  .scribble-date {
    font-size: var(--text-xs);
    color: var(--color-ink-light);
    font-style: italic;
  }

  /* On narrow screens, hide the margin note entirely or show inline */
  @media (max-width: 1200px) {
    .latest-scribble {
      position: static;
      width: auto;
      max-width: 100%;
      margin-bottom: var(--space-md);
      border-left: none;
      border-top: 2px solid color-mix(in srgb, var(--color-lichen) 60%, transparent);
      padding: var(--space-sm);
      text-align: center;
    }
  }
</style>
