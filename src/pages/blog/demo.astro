---
import BaseLayout from "../../layouts/BaseLayout.astro";
import NoteCardStack from "../../components/NoteCardStack.astro";
import "../../styles/demo-garden.css";

const posts = [
  { slug: 'lavender-tea', title: 'Lavender Tea', subtitle: 'For peaceful sleep' },
  { slug: 'digital-minimalism', title: 'Digital Minimalism', subtitle: 'Choosing what not to optimize' },
  { slug: 'wisdom-of-margins', title: 'The Wisdom of Margins', subtitle: 'Where thoughts can wander' },
  { slug: 'handmade-web', title: 'Handmade Web', subtitle: 'Irregular and personal' },
  { slug: 'parchment-grain', title: 'Parchment Grain', subtitle: 'Texture studies' },
  { slug: 'botanical-wash', title: 'Botanical Wash', subtitle: 'Soft watercolor overlays' },
  { slug: 'coffee-memory', title: 'Coffee Memory', subtitle: 'A gentle ring patina' },
  { slug: 'field-notes', title: 'Field Notes', subtitle: 'Irregular but intentional' },
];
---

<BaseLayout title="Blog (Demo)" description="Example collection with seeded stacked cards" addBorders={true} personal={false}>
  <section class="dg-section dg-pressed tw-mx-auto tw-max-w-6xl tw-px-md" style="padding: var(--space-xl) 0;">
    <h1 class="dg-section-title">Blog (Demo) <span class="dg-doodle a" aria-hidden="true"></span></h1>
    <div class="tw-mt-lg">
      <NoteCardStack items={posts.map(p => ({ id: p.slug, title: p.title, subtitle: p.subtitle, href: `/blog/${p.slug}` }))} />
    </div>
  </section>
</BaseLayout>


