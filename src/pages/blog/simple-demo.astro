---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SimpleNoteCardStack from "../../components/SimpleNoteCardStack.astro";

const posts = [
  { id: 'lavender-tea', title: 'Lavender Tea', subtitle: 'For peaceful sleep' },
  { id: 'digital-minimalism', title: 'Digital Minimalism', subtitle: 'Choosing what not to optimize' },
  { id: 'wisdom-of-margins', title: 'The Wisdom of Margins', subtitle: 'Where thoughts can wander' },
  { id: 'handmade-web', title: 'Handmade Web', subtitle: 'Irregular and personal' },
  { id: 'parchment-grain', title: 'Parchment Grain', subtitle: 'Texture studies' },
  { id: 'botanical-wash', title: 'Botanical Wash', subtitle: 'Soft watercolor overlays' },
  { id: 'coffee-memory', title: 'Coffee Memory', subtitle: 'A gentle ring patina' },
  { id: 'field-notes', title: 'Field Notes', subtitle: 'Irregular but intentional' },
];
---

<BaseLayout title="Simple Blog Demo" description="Single-layer cards inspired by the Thoughts3.htm design" addBorders={true} personal={false}>
  <section class="dg-section dg-pressed tw-mx-auto tw-max-w-6xl tw-px-md" style="padding: var(--space-xl) 0;">
    <h1 class="dg-section-title">Simple Blog Demo <span class="dg-doodle a" aria-hidden="true"></span></h1>
    <p class="tw-text-ink-light tw-mb-lg">Single-layer cards inspired by the "From The Notebook" section</p>
    <div class="tw-mt-lg">
      <SimpleNoteCardStack items={posts.map(p => ({ id: p.id, title: p.title, subtitle: p.subtitle, href: `/blog/${p.id}` }))} />
    </div>
  </section>
</BaseLayout>