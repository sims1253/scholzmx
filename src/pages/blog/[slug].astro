---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PaperTexture from '../../components/PaperTexture.astro';
import DropCap from '../../components/DropCap.astro';
import HandDrawnDivider from '../../components/HandDrawnDivider.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
};
---

<BaseLayout 
  title={`${post.data.title} - Scholz MX`}
  description={post.data.description}
  footerVariant="writing"
>
  <PaperTexture pattern="linen" intensity="light" className="blog-post">
    <article class="post-content">
      <header class="post-header">
        <div class="post-meta">
          <time class="post-date" datetime={post.data.date.toISOString()}>
            {formatDate(post.data.date)}
          </time>
          {post.data.tags && (
            <div class="post-tags">
              {post.data.tags.map(tag => (
                <span class="tag">#{tag}</span>
              ))}
            </div>
          )}
        </div>
        
        <h1 class="post-title">
          <DropCap letter={post.data.title.charAt(0)} color="walnut" style="botanical" />
          {post.data.title.slice(1)}
        </h1>
        
        <p class="post-description">{post.data.description}</p>
      </header>
      
      <HandDrawnDivider variant="botanical" width="wide" />
      
      <div class="post-body">
        <Content />
      </div>
      
      <HandDrawnDivider variant="simple" width="medium" />
      
      <footer class="post-footer">
        <nav class="post-navigation">
          <a href="/blog" class="back-link">‚Üê Back to Writing</a>
        </nav>
      </footer>
    </article>
  </PaperTexture>
</BaseLayout>

<style>
  .blog-post {
    max-width: 100%;
  }

  .post-content {
    max-width: 72ch;
    margin: 0 auto;
    padding: var(--space-xl) var(--space-lg);
  }

  .post-header {
    margin-bottom: var(--space-xl);
    text-align: center;
  }

  .post-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-lg);
    margin-bottom: var(--space-lg);
    flex-wrap: wrap;
  }

  .post-date {
    font-size: var(--text-sm);
    color: var(--color-ink-light);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-tags {
    display: flex;
    gap: var(--space-xs);
    flex-wrap: wrap;
    justify-content: center;
  }

  .tag {
    font-size: var(--text-xs);
    color: var(--color-moss);
    background-color: rgba(90, 107, 71, 0.1);
    padding: 0.2em 0.5em;
    border-radius: calc(var(--border-radius) / 2);
    font-weight: 500;
  }

  .post-title {
    font-size: clamp(var(--text-xl), 4vw, var(--text-2xl));
    line-height: 1.2;
    margin-bottom: var(--space-md);
    color: var(--color-ink-dark);
    text-align: left;
  }

  .post-description {
    font-size: var(--text-lg);
    font-style: italic;
    color: var(--color-ink-medium);
    line-height: 1.6;
    margin-bottom: var(--space-lg);
  }

  .post-body {
    font-size: var(--text-md);
    line-height: 1.55;
    color: var(--color-ink-dark);
    font-feature-settings: 'liga' 1, 'kern' 1, 'calt' 1;
    text-rendering: optimizeLegibility;
  }

  .post-body :global(h2) {
    font-size: var(--text-xl);
    margin-top: 1.6em;
    margin-bottom: 0.6em;
    color: var(--color-walnut);
    font-weight: 600;
    line-height: 1.3;
  }

  .post-body :global(h3) {
    font-size: var(--text-lg);
    margin-top: 1.4em;
    margin-bottom: 0.5em;
    color: var(--color-ink-dark);
    font-weight: 600;
    line-height: 1.4;
  }

  .post-body :global(p) {
    margin-bottom: 1.2em;
  }

  .post-body :global(blockquote) {
    border-left: 3px solid var(--color-sage);
    padding-left: var(--space-md);
    margin: var(--space-lg) 0;
    font-style: italic;
    color: var(--color-ink-medium);
  }

  .post-body :global(code) {
    background-color: rgba(139, 90, 60, 0.1);
    color: var(--color-walnut);
    padding: 0.2em 0.4em;
    border-radius: calc(var(--border-radius) / 2);
    font-size: 0.9em;
  }

  .post-body :global(pre) {
    background-color: rgba(139, 90, 60, 0.05);
    border: 1px solid rgba(139, 90, 60, 0.1);
    border-radius: var(--border-radius);
    padding: var(--space-md);
    margin: var(--space-lg) 0;
    overflow-x: auto;
  }

  .post-body :global(pre code) {
    background: none;
    padding: 0;
  }

  /* Tufte-style margin notes */
  .post-body :global(.margin-note) {
    position: absolute;
    right: -300px;
    width: 280px;
    font-size: var(--text-sm);
    line-height: 1.5;
    color: var(--color-ink-medium);
    font-style: italic;
    background: rgba(250, 247, 240, 0.9);
    border-left: 3px solid var(--color-sage);
    padding: var(--space-sm);
    border-radius: 0 var(--border-radius) var(--border-radius) 0;
    box-shadow: 0 2px 8px rgba(139, 90, 60, 0.1);
    backdrop-filter: blur(4px);
  }

  /* Position blog content to allow space for margin notes */
  @media (min-width: 1400px) {
    .post-content {
      position: relative;
      margin-right: 320px;
    }
  }

  /* Hide margin notes on smaller screens */
  @media (max-width: 1399px) {
    .post-body :global(.margin-note) {
      position: static;
      width: auto;
      margin: var(--space-md) 0;
      right: auto;
      background: rgba(168, 181, 160, 0.1);
      border-left: 3px solid var(--color-sage);
      border-radius: var(--border-radius);
    }
  }

  .post-footer {
    margin-top: var(--space-xxl);
    padding-top: var(--space-lg);
    border-top: 1px solid rgba(139, 90, 60, 0.1);
  }

  .post-navigation {
    text-align: center;
  }

  .back-link {
    font-size: var(--text-sm);
    color: var(--color-walnut);
    text-decoration: none;
    font-weight: 500;
    padding: var(--space-xs) var(--space-sm);
    border: 1px solid var(--color-walnut);
    border-radius: var(--border-radius);
    transition: all var(--transition-fast);
  }

  .back-link:hover {
    background-color: var(--color-walnut);
    color: var(--color-parchment-light);
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .post-content {
      padding: var(--space-lg) var(--space-md);
    }

    .post-meta {
      flex-direction: column;
      gap: var(--space-sm);
    }

    .post-title {
      text-align: center;
    }
  }
</style>