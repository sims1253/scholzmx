---
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    title: 'huerd — Herding Hues',
    description: 'Perceptually distinct color palettes optimized for accessibility in OKLAB (R).',
    year: 2024,
    status: 'Active',
    banner: 'https://sims1253.github.io/huerd/reference/figures/logo.png',
    isLocal: false, // Mark external images
    tech: ['R', 'OKLAB', 'nloptr'],
    links: [
      { type: 'GitHub', url: 'https://github.com/sims1253/huerd' },
      { type: 'Docs', url: 'https://github.com/sims1253/huerd#readme' },
    ],
  },
  {
    title: 'hrvester — Heart Rate Variability Toolkit',
    description: 'Analyze HRV data with robust preprocessing and recovery scoring.',
    year: 2024,
    status: 'Active',
    banner: 'https://sims1253.github.io/hrvester/reference/figures/logo.png',
    tech: ['R', 'Signal Processing'],
    links: [
      { type: 'GitHub', url: 'https://github.com/sims1253/hrvester' },
      { type: 'Docs', url: 'https://github.com/sims1253/hrvester#readme' },
    ],
  },
];

// Sort projects by year (most recent first)
const sortedProjects = projects.sort((a, b) => b.year - a.year);

// Helper function for external image optimization
const optimizeExternalImage = (url: string) => {
  // Simple URL-based image optimization service (you could replace with ImageKit, Cloudinary, etc.)
  // For now, we'll use original URL but with proper loading attributes
  return url;
};
---

<BaseLayout
  title="Projects"
  description="Selected projects"
  footerVariant="projects"
  longform={true}
  personal={false}
>
  <div class="projects-page">
    <header class="projects-header">
      <h1 class="page-title">Projects & Software</h1>
      <p class="page-description">
        Selected work in research software, tooling, and art — built for clarity, accessibility, and
        longevity.
      </p>
    </header>

    <div class="projects-container">
      <main class="projects-content">
        <section class="projects-list" aria-label="Projects">
          {
            sortedProjects.map((project) => (
              <article class="project-card">
                <div class="card-body">
                  <h3 class="card-title">
                    {project.title === 'huerd — Herding Hues' ? (
                      <a href="https://sims1253.github.io/huerd/" target="_blank" rel="noopener">
                        {project.title}
                      </a>
                    ) : (
                      project.title
                    )}
                  </h3>
                  <p class="card-excerpt">{project.description}</p>
                  <div class="card-meta">
                    <div class="card-info">
                      <span class="year-badge">{project.year}</span>
                      <span class="status-badge status-{project.status.toLowerCase()}">
                        {project.status}
                      </span>
                    </div>
                    <div class="meta-tags">
                      {project.tech.map((tech) => (
                        <span class="chip">#{tech}</span>
                      ))}
                    </div>
                  </div>
                  {project.links?.length && (
                    <div class="project-links">
                      {project.links.map((l) => (
                        <a class="link-chip" href={l.url} target="_blank" rel="noopener">
                          {l.type}
                        </a>
                      ))}
                    </div>
                  )}
                </div>
                {project.banner && (
                  <figure class="thumb">
                    <img
                      src={optimizeExternalImage(project.banner)}
                      alt={project.title}
                      width="160"
                      height="120"
                      loading="lazy"
                      fetchpriority="low"
                      decoding="async"
                    />
                  </figure>
                )}
              </article>
            ))
          }
        </section>
      </main>
    </div>
  </div>
</BaseLayout>

<style>
  .projects-page {
    max-width: 100%;
  }

  .projects-header {
    text-align: center;
    max-width: var(--content-width-serious);
    margin: 0 auto var(--space-xs);
  }

  .page-title {
    font-size: clamp(var(--text-2xl), 5vw, var(--text-3xl));
    margin-bottom: var(--space-xs);
    color: var(--color-ink-dark);
  }

  .page-description {
    font-size: var(--text-lg);
    line-height: 1.6;
    color: var(--color-ink-medium);
    font-style: italic;
  }

  .projects-container {
    max-width: var(--content-width-serious);
    margin: 0 auto;
  }
  .projects-content {
  }

  .projects-list {
    display: grid;
    gap: var(--space-sm);
  }

  .project-card {
    display: grid;
    grid-template-columns: 1fr 160px; /* Flip: content first, smaller image */
    gap: var(--space-lg);
    padding: var(--space-lg);
    background: var(--color-surface);
    border: 1px solid var(--color-lichen);
    border-radius: var(--border-radius);
    transition:
      transform var(--transition-medium),
      box-shadow var(--transition-medium),
      border-color var(--transition-medium);
    box-shadow: 0 4px 10px color-mix(in srgb, var(--color-walnut) 5%, transparent);
  }
  .project-card:hover {
    transform: translateY(-1px);
    border-color: var(--color-sage);
    box-shadow: 0 6px 16px color-mix(in srgb, var(--color-walnut) 7%, transparent);
  }
  .thumb {
    margin: 0;
    background: var(--color-parchment-light);
    border-radius: var(--border-radius);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 120px;
  }
  .thumb img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    filter: saturate(0.85) contrast(0.95);
    opacity: 0.9;
  }
  .card-body {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }
  .card-title {
    margin: 0;
    font-size: var(--text-xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
  }
  .card-excerpt {
    color: var(--color-text-secondary);
    margin: 0;
    font-size: var(--text-md);
    line-height: 1.6;
  }
  .card-meta {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .card-info {
    display: flex;
    gap: var(--space-xs);
    align-items: center;
  }
  .year-badge {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    letter-spacing: 0.05em;
    padding: 0.15em 0.55em;
    border-radius: 999px;
    border: 1px solid var(--color-lichen);
    background: var(--color-surface);
  }
  .status-badge {
    font-size: var(--text-xs);
    letter-spacing: 0.05em;
    padding: 0.15em 0.55em;
    border-radius: 999px;
    border: 1px solid var(--color-lichen);
    background: var(--wash-sage);
  }
  .status-active {
    color: var(--color-accent-secondary);
  }
  .status-ongoing {
    color: var(--color-walnut);
  }

  .meta-tags {
    display: flex;
    gap: var(--space-xxs, 0.25rem);
    flex-wrap: wrap;
  }
  .chip {
    position: relative;
    font-size: var(--text-xxs, 0.7rem);
    color: var(--color-accent-secondary);
    background: var(--wash-sage);
    padding: 0.15em 0.55em;
    border-radius: 999px;
    text-decoration: none;
    border: 1px solid var(--color-lichen);
    letter-spacing: 0.02em;
  }

  .project-links {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }
  .link-chip {
    font-size: var(--text-xs);
    color: var(--color-text-primary);
    text-decoration: none;
    padding: 0.15rem 0.45rem;
    border-radius: 6px;
    border: 1px solid var(--color-lichen);
    background: var(--color-surface);
  }
  .link-chip:hover {
    color: var(--color-link-hover);
    background: var(--wash-sage);
    border-color: var(--color-sage);
  }

  @media (max-width: 768px) {
    .project-card {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }
    .thumb {
      min-height: 120px;
      order: -1; /* Move image above content on mobile */
    }
  }
  @media (max-width: 480px) {
    .card-title {
      font-size: var(--text-lg);
    }
    .project-card {
      padding: var(--space-md);
    }
  }
</style>
