---
export interface Props {
  id?: string;
  position?: 'left' | 'right' | 'auto';
}

const { 
  id = `note-${Math.random().toString(36).substr(2, 9)}`,
  position = 'auto'
} = Astro.props;
---

<span class="margin-note-container">
  <label class="margin-note-toggle" for={`toggle-${id}`} aria-label="Show margin note">
    <span class="note-indicator" aria-hidden="true">※</span>
  </label>
  <input type="checkbox" id={`toggle-${id}`} class="margin-note-checkbox" />
  <aside class={`margin-note margin-note--${position}`} role="complementary">
    <div class="margin-note-content">
      <slot />
    </div>
    <label class="margin-note-close" for={`toggle-${id}`} aria-label="Hide margin note">
      <span aria-hidden="true">×</span>
    </label>
  </aside>
</span>

<style>
  .margin-note-container {
    position: relative;
    display: inline;
  }

  .margin-note-toggle {
    cursor: pointer;
    display: inline;
    user-select: none;
  }

  .note-indicator {
    color: var(--color-walnut);
    font-weight: 600;
    text-decoration: none;
    font-size: 0.9em;
    vertical-align: super;
    line-height: 1;
    transition: all var(--transition-fast);
    padding: 0 0.1em;
  }

  .note-indicator:hover {
    color: var(--color-ochre);
    text-shadow: 0 0 4px rgba(204, 139, 92, 0.3);
    transform: scale(1.1);
  }

  .margin-note-checkbox {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .margin-note {
    position: absolute;
    top: -0.5em;
    width: 200px;
    background: var(--color-parchment-light);
    border: 1px solid rgba(139, 90, 60, 0.2);
    border-radius: var(--border-radius);
    padding: var(--space-sm);
    font-size: var(--text-xs);
    line-height: 1.4;
    color: var(--color-ink-medium);
    box-shadow: 0 4px 12px rgba(139, 90, 60, 0.15);
    z-index: 10;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-8px);
    transition: all var(--transition-medium);
    pointer-events: none;
  }

  .margin-note--left {
    right: calc(100% + var(--space-sm));
  }

  .margin-note--right {
    left: calc(100% + var(--space-sm));
  }

  .margin-note--auto {
    left: calc(100% + var(--space-sm));
  }

  /* Show note when checkbox is checked */
  .margin-note-checkbox:checked + .margin-note {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    pointer-events: auto;
  }

  .margin-note-content {
    margin: 0;
  }

  .margin-note-content :global(p) {
    margin: 0 0 var(--space-xs);
    font-size: inherit;
  }

  .margin-note-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .margin-note-close {
    position: absolute;
    top: var(--space-xs);
    right: var(--space-xs);
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: var(--color-ink-light);
    font-size: 14px;
    line-height: 1;
    border-radius: 50%;
    transition: all var(--transition-fast);
  }

  .margin-note-close:hover {
    background-color: rgba(139, 90, 60, 0.1);
    color: var(--color-ink-dark);
  }

  /* Decorative elements */
  .margin-note::before {
    content: '';
    position: absolute;
    top: var(--space-sm);
    width: 6px;
    height: 1px;
    background-color: var(--color-gold);
    opacity: 0.6;
  }

  .margin-note--left::before {
    right: -7px;
  }

  .margin-note--right::before,
  .margin-note--auto::before {
    left: -7px;
  }

  .margin-note::after {
    content: '❦';
    position: absolute;
    bottom: var(--space-xs);
    right: var(--space-xs);
    font-size: 10px;
    color: var(--color-gold);
    opacity: 0.4;
  }

  /* Mobile and tablet responsiveness */
  @media (max-width: 1024px) {
    .margin-note--auto {
      left: 50%;
      transform: translateX(-50%) translateY(-8px);
      width: 250px;
    }

    .margin-note-checkbox:checked + .margin-note--auto {
      transform: translateX(-50%) translateY(0);
    }

    .margin-note--auto::before {
      left: 50%;
      transform: translateX(-50%);
      top: -2px;
      width: 1px;
      height: 6px;
    }
  }

  @media (max-width: 768px) {
    .margin-note {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) scale(0.9);
      width: calc(100vw - var(--space-lg));
      max-width: 300px;
      z-index: 1000;
    }

    .margin-note-checkbox:checked + .margin-note {
      transform: translate(-50%, -50%) scale(1);
    }

    .margin-note::before {
      display: none;
    }

    /* Mobile backdrop */
    .margin-note-checkbox:checked::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: rgba(44, 36, 22, 0.3);
      z-index: 999;
      backdrop-filter: blur(2px);
    }
  }

  /* Ensure proper stacking on small screens */
  @media (max-width: 480px) {
    .margin-note {
      width: calc(100vw - var(--space-md));
      padding: var(--space-md);
    }
  }
</style>