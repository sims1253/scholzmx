---
export interface Props {
  letter: string;
  color?: 'gold' | 'walnut' | 'moss' | 'ochre';
  style?: 'simple' | 'ornate' | 'botanical';
}

const { 
  letter, 
  color = 'gold',
  style = 'ornate'
} = Astro.props;

// Ensure we only get the first character
const dropCapLetter = letter.charAt(0).toUpperCase();
---

<span class={`drop-cap drop-cap--${color} drop-cap--${style}`} aria-hidden="true">
  {dropCapLetter}
</span>

<style>
  .drop-cap {
    float: left;
    font-family: var(--font-heading);
    font-weight: 700;
    line-height: 0.8;
    margin: 0.1em 0.1em 0 0;
    text-align: center;
    display: block;
    position: relative;
    user-select: none;
  }

  /* Size variations */
  .drop-cap--simple {
    font-size: 3.5em;
    padding: 0.05em 0.1em;
  }

  .drop-cap--ornate {
    font-size: 4em;
    padding: 0.1em 0.15em;
  }

  .drop-cap--botanical {
    font-size: 4.5em;
    padding: 0.15em 0.2em;
  }

  /* Color variations */
  .drop-cap--gold {
    color: var(--color-gold);
    text-shadow: 1px 1px 2px rgba(212, 175, 55, 0.3);
  }

  .drop-cap--walnut {
    color: var(--color-walnut);
    text-shadow: 1px 1px 2px rgba(139, 90, 60, 0.3);
  }

  .drop-cap--moss {
    color: var(--color-moss);
    text-shadow: 1px 1px 2px rgba(90, 107, 71, 0.3);
  }

  .drop-cap--ochre {
    color: var(--color-ochre);
    text-shadow: 1px 1px 2px rgba(204, 139, 92, 0.3);
  }

  /* Style variations */
  .drop-cap--simple::before,
  .drop-cap--simple::after {
    display: none;
  }

  .drop-cap--ornate::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    border: 1px solid currentColor;
    border-radius: 3px;
    opacity: 0.3;
    z-index: -1;
  }

  .drop-cap--ornate::after {
    content: '❦';
    position: absolute;
    bottom: -0.3em;
    right: -0.2em;
    font-size: 0.4em;
    opacity: 0.6;
    transform: rotate(15deg);
  }

  .drop-cap--botanical::before {
    content: '';
    position: absolute;
    top: -4px;
    left: -4px;
    right: -4px;
    bottom: -4px;
    background: radial-gradient(circle at center, currentColor 1px, transparent 1px);
    background-size: 8px 8px;
    opacity: 0.1;
    border-radius: 6px;
    z-index: -1;
  }

  .drop-cap--botanical::after {
    content: '✿';
    position: absolute;
    top: -0.1em;
    right: -0.1em;
    font-size: 0.3em;
    opacity: 0.7;
    transform: rotate(-10deg);
  }

  /* Hover effects for interactivity */
  .drop-cap {
    transition: all var(--transition-medium);
  }

  .drop-cap:hover {
    transform: scale(1.05) rotate(1deg);
  }

  .drop-cap--ornate:hover::after,
  .drop-cap--botanical:hover::after {
    transform: rotate(25deg) scale(1.2);
    opacity: 1;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .drop-cap--simple {
      font-size: 3em;
    }

    .drop-cap--ornate {
      font-size: 3.5em;
    }

    .drop-cap--botanical {
      font-size: 4em;
    }
  }

  @media (max-width: 480px) {
    .drop-cap {
      margin-right: 0.08em;
    }
    
    .drop-cap--simple {
      font-size: 2.5em;
    }

    .drop-cap--ornate {
      font-size: 3em;
    }

    .drop-cap--botanical {
      font-size: 3.5em;
    }
  }
</style>