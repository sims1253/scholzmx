/* Import token files (colors and typography) */
@import url("./tokens.colors.css");
@import url("./tokens.typography.css");

/* Global styles for scholzmx digital garden website */

/* Performance optimizations */
img {
  /* Reduce layout shift */
  height: auto;
  max-width: 100%;
}

/* Optimize code block rendering */
pre {
  contain: layout style;
  white-space: pre;
  word-break: normal;
}

/* Optimize KaTeX math rendering */
.katex {
  /* Improve font rendering */
  font-feature-settings: 'liga' 0;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.katex-display {
  /* Better spacing and performance */
  contain: layout style;
  margin: 1.5em 0;
}

/* Self-hosted fonts moved to /public/fonts/*.css and loaded per-page */

/* Fira Code for monospace code */
@font-face {
  font-family: 'Fira Code';
  src: url('/fonts/FiraCode-Regular.woff2') format('woff2');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}
@font-face {
  font-family: 'Fira Code';
  src: url('/fonts/FiraCode-Medium.woff2') format('woff2');
  font-weight: 500;
  font-style: normal;
  font-display: swap;
}

/* Reset and base styles */
*,
*::before,
*::after {
  box-sizing: border-box;
}

html {
  font-size: 21px;
  line-height: var(--spacing-line-height);
  scroll-behavior: smooth;
}

body {
  margin: 0;
  padding: 0;
  font-family: var(--font-body);
  color: var(--color-text-primary);
  background-color: var(--color-background);
  position: relative;
  overflow-x: hidden;
  
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-feature-settings: 'liga' 1, 'kern' 1;
}

@media print {
  /* Optional: simplify colors for print readability */
  a {
    text-decoration: underline;
    color: black;
  }
  .page-nav, .nav-separator {
    color: black;
    text-shadow: none;
  }
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
  line-height: 1.25;
  margin: 0 0 var(--space-md);
  color: var(--color-text-primary);
}

/* Display hierarchy: headings */
h1, h2, h3 {
  font-family: var(--font-heading);
  font-weight: var(--heading-weight-strong);
  font-feature-settings: 'liga' 1, 'kern' 1;
  text-rendering: optimizeLegibility;
}

h4, h5, h6 {
  font-family: var(--font-body-personal); /* Default to personal content font */
  font-weight: var(--heading-weight-medium);
}

h1 {
  font-size: var(--text-3xl);
  font-weight: var(--heading-weight-strong);
  margin-bottom: var(--space-lg);
  letter-spacing: 0.005em;
}

h2 {
  font-size: var(--text-2xl);
  margin-top: var(--space-xl);
  letter-spacing: 0.002em;
}

h3 {
  font-size: var(--text-xl);
  margin-top: var(--space-lg);
}

h4 {
  font-size: var(--text-lg);
}

p {
  margin: 0 0 1.25em; /* Consistent paragraph spacing in em units */
  max-width: var(--content-width);
}

/* Links with gentle hover effects (print-like) */
a {
  color: var(--color-link);
  text-decoration: underline;
  text-decoration-color: var(--color-underline);
  text-underline-offset: 2px;
  text-decoration-thickness: 1.6px;
  transition: color var(--transition-fast), text-decoration-color var(--transition-fast);
}

a:hover {
  color: var(--color-link-hover);
  text-decoration-color: var(--color-underline-hover);
  text-decoration-thickness: 2px;
}

a:focus {
  outline: none;
  box-shadow: 
    0 0 0 1px color-mix(in srgb, var(--color-moss) 40%, transparent),
    0 0 8px color-mix(in srgb, var(--color-sage) 20%, transparent);
  border-radius: 3px;
  background: color-mix(in srgb, var(--color-parchment-light) 60%, transparent);
}

/* Lists */
ul, ol {
  margin: 0 0 var(--space-md);
  padding-left: var(--space-lg);
}

li {
  margin-bottom: var(--space-xs);
}




/* Images */
img {
  max-width: 100%;
  height: auto;
  border-radius: var(--border-radius);
  box-shadow: 0 8px 24px color-mix(in srgb, var(--color-walnut) 6%, transparent), 0 2px 6px color-mix(in srgb, var(--color-sage) 10%, transparent);
}

/* Blockquotes with medieval manuscript styling */
blockquote {
  margin: var(--space-lg) 0;
  padding: var(--space-md) var(--space-lg);
  border-left: 4px solid var(--color-tansy);
  background:
    linear-gradient(0deg, var(--color-parchment-light) 0%, var(--color-parchment-light) 65%, var(--wash-sage) 100%);
  font-style: italic;
  position: relative;
  max-width: var(--content-width);
}

blockquote::before {
  content: '"';
  font-size: 4rem;
  line-height: 1;
  color: var(--color-tansy);
  position: absolute;
  left: var(--space-sm);
  top: 0;
  font-family: var(--font-heading);
}

blockquote p:last-child {
  margin-bottom: 0;
}

/* Tables */
table {
  width: 100%;
  border-collapse: collapse;
  margin: var(--space-lg) 0;
}

th, td {
  padding: var(--space-sm);
  text-align: left;
  border-bottom: 1px solid rgba(139, 90, 60, 0.2);
}

th {
  font-weight: 600;
  color: var(--color-ink-dark);
  background-color: var(--color-parchment-light);
}

/* EB Garamond Initials layered drop cap
   POLICY: Drop caps should only be used in the first paragraph of long-form content:
   - Blog posts (.longform containers)
   - Notes/essays (.longform containers) 
   - Landing page introduction
   - Recipe instructions (optional)
   
   Usage: place <span class="dropcap" data-first-letter="I"></span> as the very first inline child
   inside the first paragraph of a longform section. Hidden automatically on mobile devices. */
.dropcap {
  font-family: var(--font-dropcap-background);
  color: var(--dropcap-color-background);
  position: relative;
  text-transform: uppercase;
  float: left;

  /* Adaptive sizing using CSS custom properties */
  font-size: var(--dropcap-size, 3.8rem);
  line-height: 1;
  width: var(--dropcap-size, 3.8rem);
  
  margin: 0 0.25rem 0 0;
  padding: var(--dropcap-padding-top, 0.1rem) 0 0 0;

  font-weight: normal;
  user-select: none;
  -webkit-font-smoothing: antialiased;
}

.dropcap::before {
  font-family: var(--font-dropcap-foreground);
  color: var(--dropcap-color-foreground);
  content: attr(data-first-letter);
  position: absolute;
  
  /* Position letter to align with ornament */
  top: var(--dropcap-padding-top, 0.1rem);
  left: 0;
  
  font-size: 1em; /* Relative to parent ornament size */
  line-height: 1;

  /* Letter behind ornament */
  z-index: -1;
  pointer-events: none;
}

/* Long-form article layout + dropcap policy */
.longform p:first-of-type::first-letter {
  /* disabled: use explicit DropCap component for better control */
}

/* Context-specific drop cap sizing for different text layouts */

/* Longform context - serious content (ET Book Roman) */
.longform {
  --dropcap-size: 3.8rem;
  --dropcap-padding-top: 0.15rem;
}

/* Longform context - personal content (Alegreya) */
.longform.personal-content {
  --dropcap-size: 3.7rem;
  --dropcap-padding-top: 0.25rem;
}

/* ===== LONGFORM TYPOGRAPHY SYSTEM ===== */
/* Dual typography system: serious vs personal content */

/* Default longform baseline */
.longform {
  font-family: var(--font-body);
  font-size: var(--text-md);
  line-height: 1.35;
  color: var(--color-text-primary);
  font-feature-settings: 'liga' 1, 'kern' 1, 'calt' 1;
  text-rendering: optimizeLegibility;
  max-width: var(--content-width-serious);
  margin: 0 auto;
}

/* Personal content typography (welcome, recipes) */
.longform.personal-content {
  line-height: 1.4;
  max-width: var(--content-width-personal);
}

.longform p {
  margin-bottom: 1.25em;
  line-height: inherit;
}

.longform h2 {
  font-size: var(--text-xl);
  margin-top: 1.6em;
  margin-bottom: 0.6em;
  color: var(--color-walnut);
  font-weight: var(--heading-weight-strong);
  line-height: 1.3;
}

.longform h3 {
  font-size: var(--text-lg);
  margin-top: 1.4em;
  margin-bottom: 0.5em;
  color: var(--color-text-primary);
  font-weight: var(--heading-weight-strong);
  line-height: 1.4;
}

.longform blockquote {
  border-left: 3px solid var(--color-sage);
  padding-left: var(--space-md);
  margin: var(--space-lg) 0;
  font-style: italic;
  color: var(--color-text-secondary);
  background: rgba(168, 181, 160, 0.08);
  border-radius: 0 var(--border-radius) var(--border-radius) 0;
}


.longform ul, .longform ol {
  margin: 0 0 1.25em;
  padding-left: var(--space-lg);
}

.longform li {
  margin-bottom: var(--space-xs);
  line-height: inherit;
}


/* Mobile: drop caps are hidden by component-level CSS */

/* Utility classes */
.text-center { text-align: center; }
.text-right { text-align: right; }
.font-heading { font-family: var(--font-heading); }
.logo-text { font-variant-caps: small-caps; letter-spacing: 0.03em; }
.color-muted { color: var(--color-text-muted); }
.color-accent { color: var(--color-accent-primary); }

/* Main layout container */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--space-md);
}

/* Content areas */
.content {
  max-width: var(--content-width);
  margin: 0 auto;
}

.content-wide {
  max-width: var(--content-width);  /* Use 90ch for long-form reading */
  margin: 0 auto;
}

/* Responsive design */
@media (max-width: 768px) {
  html { font-size: 18px; }
  
  :root {
    --space-md: 1rem;
    --space-lg: 1.5rem;
    --space-xl: 2rem;
    --space-xxl: 2.5rem;
  }
  
  .container { padding: 0 var(--space-sm); }
  
  h1 { font-size: var(--text-2xl); }
  h2 { font-size: var(--text-xl); }
}

/* Print styles for better readability */
@media print {
  body {
    background: white;
    color: black;
  }
  
  body::before {
    display: none;
  }
  
  a {
    color: black;
    text-decoration: underline;
  }
  
  .no-print {
    display: none;
  }
}

/* Code block styling with manuscript aesthetics */
.code-with-copy { display: flow-root; }
.astro-code {
  font-family: var(--font-mono);
  padding: var(--space-sm);
  border-radius: 10px;
  margin: var(--space-sm) 0;
  position: relative;
  
  /* Manuscript-inspired frame */
  border: 1px solid color-mix(in srgb, var(--color-lichen) 30%, transparent);
  box-shadow:
    0 8px 22px color-mix(in srgb, var(--color-walnut) 5%, transparent),
    0 2px 6px color-mix(in srgb, var(--color-sage) 12%, transparent),
    inset 0 1px 0 color-mix(in srgb, var(--color-parchment-light) 70%, white);
  
  font-size: 18px;
  line-height: 1.25;
  overflow-x: auto;
  
  /* Gentle transition for theme changes */
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

@media (max-width: 640px) {
  .astro-code {
    padding: var(--space-md);
  }
}

/* Copy button styling */
.astro-code .copy-button {
  position: absolute;
  top: var(--space-sm);
  right: var(--space-sm);
  background: color-mix(in srgb, var(--color-surface) 92%, var(--color-walnut));
  border: 1px solid var(--color-lichen) !important;
  border-radius: 999px;
  padding: 6px 10px;
  font-size: 18px;
  font-family: var(--font-heading);
  color: var(--color-walnut);
  cursor: pointer;
  opacity: 0.08;
  transition: opacity 0.15s ease, transform 0.15s ease, background 0.2s ease, color 0.2s ease;
  user-select: none;
  pointer-events: auto;
  z-index: 1;
  
  box-shadow: 0 2px 6px color-mix(in srgb, var(--color-sage) 20%, transparent);
}

@media (max-width: 640px) {
  .astro-code .copy-button { display: none; }
}

.astro-code:hover .copy-button { opacity: 0.5; }

.astro-code .copy-button:hover {
  background: color-mix(in srgb, var(--color-surface) 96%, var(--color-walnut));
  color: var(--color-ochre);
  border-color: var(--color-lichen);
  transform: translateY(-1px);
  box-shadow: 0 3px 8px color-mix(in srgb, var(--color-sage) 18%, transparent);
  opacity: 1;
}

.astro-code .copy-button:focus-visible { outline-color: var(--color-lichen); }

.astro-code .copy-button:active {
  transform: translateY(0);
  box-shadow: 0 1px 3px color-mix(in srgb, var(--color-sage) 18%, transparent);
}

.astro-code .copy-button.copied {
  background: color-mix(in srgb, var(--color-surface) 96%, var(--color-moss));
  color: var(--color-moss);
  border-color: var(--color-moss);
}

/* Inline code with subtle handcrafted styling */
code:not([class]):not(.katex) {
  font-family: var(--font-mono);
  background: color-mix(in srgb, var(--color-surface) 95%, var(--color-sage));
  border: 1px solid color-mix(in srgb, var(--color-lichen) 30%, transparent);
  padding: 1px 4px;
  border-radius: 3px;
  font-size: 0.875em;
  font-weight: 400;
}

/* Even lighter styling for inline code in headings */
h1 code:not([class]):not(.katex),
h2 code:not([class]):not(.katex),
h3 code:not([class]):not(.katex),
h4 code:not([class]):not(.katex),
h5 code:not([class]):not(.katex),
h6 code:not([class]):not(.katex) {
  background: color-mix(in srgb, var(--color-surface) 98%, var(--color-sage));
  border-color: color-mix(in srgb, var(--color-lichen) 20%, transparent);
  padding: 1px 3px;
}

/* Shiki dual theme switching */
/* Default: light theme, then dark based on system preference or manual toggle */
[data-theme="dark"] .astro-code,
[data-theme="dark"] .astro-code span {
  color: var(--shiki-dark) !important;
  background-color: var(--shiki-dark-bg) !important;
  font-style: var(--shiki-dark-font-style) !important;
  font-weight: var(--shiki-dark-font-weight) !important;
  text-decoration: var(--shiki-dark-text-decoration) !important;
}

@media (prefers-color-scheme: dark) {
  /* Only apply dark theme if no manual theme is set */
  :not([data-theme]) .astro-code,
  :not([data-theme]) .astro-code span {
    color: var(--shiki-dark) !important;
    background-color: var(--shiki-dark-bg) !important;
    font-style: var(--shiki-dark-font-style) !important;
    font-weight: var(--shiki-dark-font-weight) !important;
    text-decoration: var(--shiki-dark-text-decoration) !important;
  }
}

/* Collapsible code sections with botanical styling */
details.code-collapse {
  margin: var(--space-md) 0;
  border: 1px solid var(--color-lichen);
  border-radius: 10px;
  overflow: hidden;
  
  /* Subtle manuscript frame */
  box-shadow: 0 6px 14px color-mix(in srgb, var(--color-sage) 10%, transparent), 0 2px 4px color-mix(in srgb, var(--color-walnut) 6%, transparent);
  background: var(--color-surface);
}

details.code-collapse summary {
  position: relative;
  padding: var(--space-xs) var(--space-lg);
  padding-left: calc(var(--space-lg) + 10px);
  background: var(--color-surface);
  font-family: var(--font-heading);
  font-weight: 500;
  font-size: var(--text-md);
  line-height: 1.2;
  color: var(--color-walnut);
  cursor: pointer;
  user-select: none;
  list-style: none;
  display: flex;
  align-items: center;
  gap: var(--space-xs);
  min-height: auto;
  transition: all 0.2s ease;
  border-bottom: 1px solid color-mix(in srgb, var(--color-lichen) 40%, transparent);
  box-shadow: 0 1px 2px color-mix(in srgb, var(--color-walnut) 6%, transparent);
}

details.code-collapse summary p { margin: 0; line-height: inherit; }

details.code-collapse summary::-webkit-details-marker { display: none; }

details.code-collapse summary::before {
  content: 'â–¸';
  color: var(--color-moss);
  font-size: 0.85em;
  line-height: 1;
  transition: transform 0.2s ease;
  transform-origin: center;
  flex-shrink: 0;
}

details.code-collapse[open] summary::before { transform: rotate(90deg); }

details.code-collapse summary::after {
  content: '';
  position: absolute;
  left: var(--space-sm);
  top: 50%;
  transform: translateY(-50%);
  width: 6px;
  height: 22px;
  border-radius: 3px;
  background: color-mix(in srgb, var(--color-walnut) 15%, transparent);
}

details.code-collapse summary:hover {
  background: color-mix(in srgb, var(--color-surface) 98%, var(--color-walnut));
  color: var(--color-ochre);
}

details.code-collapse summary:hover::before { color: var(--color-ochre); }

details.code-collapse[open] summary { border-bottom-color: var(--color-lichen); margin-bottom: 0; }

/* Content area styling */
details.code-collapse .astro-code {
  margin: 0;
  border: none;
  border-radius: 0;
  box-shadow: none;
}

/* Remove selection-style highlights from code content */
.astro-code *,
.astro-code span,
.astro-code .line {
  background: transparent !important;
  outline: none !important;
  border: none !important;
  box-shadow: none !important;
}

/* Ensure no pseudo-element backgrounds interfere */
.astro-code *::before,
.astro-code *::after {
  background: transparent !important;
  outline: none !important;
  border: none !important;
  box-shadow: none !important;
}

/* Smooth opening animation */
details.code-collapse[open] {
  animation: expand 0.3s ease-out;
}

@keyframes expand {
  from {
    max-height: 3rem;
  }
  to {
    max-height: 100vh;
  }
}
